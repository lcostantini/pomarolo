<h3>Add new pomarolo</h3>
<form action="/user" method="POST" >
  <label>Description:</label>
  <input type="text" name="pomodoro[description]" value="{{ pomarolo.description }}" >
  <br>

  <label>Pomarolos</label>
  <input type="text" name="pomodoro[pomarolo]" value="{{ pomarolo.pomarolo }}" >
  <br>
  <input type="hidden" name="pomodoro[user]" value="{{ pomarolo.user }}" >
  <div>
    <button type="submit" name="add">Add</button>
  </div>
</form>
